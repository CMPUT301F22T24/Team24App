<?xml version="1.0" encoding="utf-8"?>

<!-- https://www.youtube.com/watch?v=xZ9vURZ0RHY Link on how to implement scroll view. To scroll down the app-->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/recipe_scroll_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#343231"
    android:fillViewport="true"
    tools:context=".AddRecipeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!--Title-->
        <TextView
            android:id="@+id/recipe_title_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/karma_medium"
            android:text="Add Recipe"
            android:textColor="#E9E5E5"
            android:textSize="30dp"
            android:textStyle="bold"/>

        <!--Recipe Title-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/karma_medium"
                android:padding="5dp"
                android:text="Title"
                android:textColor="#E9E5E5"
                android:textSize="20dp"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/add_recipe_title_editText"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:backgroundTint="#ED524E"
                android:fontFamily="@font/karma_medium"
                android:hint="Enter the title of your recipe"
                android:maxLength="30"
                android:minHeight="48dp"
                android:padding="5dp"
                android:textColor="#E9E5E5"
                android:textColorHint="#99E9E5E5"/>

        </LinearLayout>

        <!--Recipe Prep Time-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/karma_medium"
                android:padding="5dp"
                android:text="Preparation Time"
                android:textColor="#E9E5E5"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="5dp">

                <NumberPicker
                    android:id="@+id/hour_numberPicker"
                    android:layout_width="wrap_content"
                    android:layout_height="90dp"
                    android:layout_weight="2"
                    android:theme="@style/AppTheme.Picker" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="30dp"
                    android:text="hrs"
                    android:textColor="#E9E5E5"
                    android:textSize="20sp"/>

                <NumberPicker
                    android:id="@+id/min_numberPicker"
                    android:layout_width="wrap_content"
                    android:layout_height="90dp"
                    android:layout_weight="2"
                    android:theme="@style/AppTheme.Picker" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="30dp"
                    android:text="mins"
                    android:textColor="#E9E5E5"
                    android:textSize="20sp" />
            </LinearLayout>

        </LinearLayout>

        <!--Recipe Servings-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/karma_medium"
                android:padding="5dp"
                android:text="Number of Servings"
                android:textColor="#E9E5E5"
                android:textSize="20dp"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/add_recipe_servings_editText"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:backgroundTint="#ED524E"
                android:fontFamily="@font/karma_medium"
                android:hint="Enter the number of servings"
                android:inputType="number"
                android:maxLength="30"
                android:minHeight="48dp"
                android:padding="5dp"
                android:textColor="#E9E5E5"
                android:textColorHint="#99E9E5E5"/>

        </LinearLayout>

        <!--Recipe Category-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/karma_medium"
                android:padding="5dp"
                android:text="Category"
                android:textColor="#E9E5E5"
                android:textSize="20dp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/add_recipe_category_spinner"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#ED524E"
                android:fontFamily="@font/karma_medium"
                android:popupBackground="#343231"
                android:textColor="#E9E5E5" />
        </LinearLayout>

        <!--Recipe Comments-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/karma_medium"
                android:padding="5dp"
                android:text="Comments"
                android:textColor="#E9E5E5"
                android:textSize="20dp"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/add_recipe_comments_editText"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:backgroundTint="#ED524E"
                android:fontFamily="@font/karma_medium"
                android:hint="Write comments here"
                android:maxLength="30"
                android:minHeight="48dp"
                android:padding="5dp"
                android:textColor="#E9E5E5"
                android:textColorHint="#99E9E5E5"/>

        </LinearLayout>

        <!--Recipe Image-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/karma_medium"
                android:padding="5dp"
                android:text="Upload Image"
                android:textColor="#E9E5E5"
                android:textSize="20dp"
                android:textStyle="bold"/>
            <ImageView
                android:id="@+id/recipe_Image"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                app:srcCompat="@mipmap/camera" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp">

                <ImageButton
                    android:id="@+id/open_gallery"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    app:srcCompat="@android:drawable/ic_menu_gallery" />

                <ImageButton
                    android:id="@+id/open_camera"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    app:srcCompat="@android:drawable/ic_menu_camera" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/karma_medium"
                    android:padding="5dp"
                    android:text="Ingredients"
                    android:textColor="#E9E5E5"
                    android:textSize="20dp"
                    android:textStyle="bold"/>

                <Button
                    android:id="@+id/add_recipe_delete_ingredient_button"
                    android:layout_width="27dp"
                    android:layout_height="34dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/custom_button"
                    android:fontFamily="@font/karma_medium"
                    android:text="Del"
                    android:textAllCaps="false"
                    android:textSize="15dp"/>

                <Button
                    android:id="@+id/add_recipe_add_ingredient_button"
                    android:layout_width="27dp"
                    android:layout_height="34dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/custom_button"
                    android:fontFamily="@font/karma_medium"
                    android:onClick="addIngredientToRecipe"
                    android:text="Add"
                    android:textAllCaps="false"
                    android:textSize="15dp" />

            </LinearLayout>


            <Button
                android:id="@+id/add_recipe_select_from_storage_button"                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:layout_gravity="end"
                android:background="@drawable/custom_button"
                android:fontFamily="@font/karma_medium"
                android:text="Select from Ingredient Storage"
                android:onClick="onSelectFromStorage"
                android:textAllCaps="false"
                android:textSize="12sp" />

            <ListView
                android:id="@+id/recipe_ingredient_list"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:padding="5dp" />

        </LinearLayout>

        <!--Ingredient Expiry Date-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp">

            <View
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <Button
                android:id="@+id/add_recipe_confirm_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/custom_button"
                android:fontFamily="@font/karma_medium"
                android:onClick="onAddOrEditRecipeConfirmHandler"
                android:text="Confirm"
                android:textAllCaps="false"
                android:textSize="20dp" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>