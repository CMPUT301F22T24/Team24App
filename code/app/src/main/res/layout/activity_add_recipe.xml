<?xml version="1.0" encoding="utf-8"?>

<!-- https://www.youtube.com/watch?v=xZ9vURZ0RHY Link on how to implement scroll view. To scroll down the app-->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#343231"
    tools:context=".AddRecipeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!--Title-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Recipe"
            android:textColor="#E9E5E5"
            android:fontFamily="@font/karma_medium"
            android:textSize="30dp"
            android:textStyle="bold">
        </TextView>

        <!--Recipe Title-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Title"
                android:padding="5dp"
                android:fontFamily="@font/karma_medium"
                android:textSize="20dp"
                android:textColor="#E9E5E5"
                android:textStyle="bold">
            </TextView>

            <EditText
                android:id="@+id/add_recipe_title_editText"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:backgroundTint="#ED524E"
                android:fontFamily="@font/karma_medium"
                android:layout_weight="1"
                android:hint="Enter the title of your recipe"
                android:maxLength="30"
                android:minHeight="48dp"
                android:padding="5dp"
                android:textColor="#E9E5E5"
                android:textColorHint="#99E9E5E5">
            </EditText>

        </LinearLayout>

        <!--Recipe Prep Time-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp"
            android:gravity="center">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Preparation Time"
                android:padding="5dp"
                android:fontFamily="@font/karma_medium"
                android:textSize="20sp"
                android:textColor="#E9E5E5"
                android:textStyle="bold">
            </TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="5dp">

                <NumberPicker
                    android:id="@+id/hour_numberPicker"
                    android:layout_width="wrap_content"
                    android:layout_height="90dp"
                    android:layout_weight="2"
                    android:theme="@style/AppTheme.Picker"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="hrs"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:paddingVertical="30dp"
                    android:paddingHorizontal="10dp"
                    android:textColor="#E9E5E5">
                </TextView>

                <NumberPicker
                    android:id="@+id/min_numberPicker"
                    android:layout_width="wrap_content"
                    android:layout_height="90dp"
                    android:layout_weight="2"
                    android:theme="@style/AppTheme.Picker"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="mins"
                    android:textSize="20sp"
                    android:layout_weight="1"
                    android:paddingVertical="30dp"
                    android:paddingHorizontal="10dp"
                    android:textColor="#E9E5E5" />
            </LinearLayout>

        </LinearLayout>

        <!--Recipe Servings-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Number of Servings"
                android:padding="5dp"
                android:fontFamily="@font/karma_medium"
                android:textSize="20dp"
                android:textColor="#E9E5E5"
                android:textStyle="bold">
            </TextView>

            <EditText
                android:id="@+id/add_recipe_servings_editText"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:backgroundTint="#ED524E"
                android:fontFamily="@font/karma_medium"
                android:layout_weight="1"
                android:hint="Enter the number of servings"
                android:maxLength="30"
                android:inputType="number"
                android:minHeight="48dp"
                android:padding="5dp"
                android:textColor="#E9E5E5"
                android:textColorHint="#99E9E5E5">
            </EditText>

        </LinearLayout>

        <!--Recipe Category-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Category"
                android:padding="5dp"
                android:fontFamily="@font/karma_medium"
                android:textSize="20dp"
                android:textColor="#E9E5E5"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/add_recipe_category_spinner"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#ED524E"
                android:fontFamily="@font/karma_medium"
                android:textColor="#E9E5E5"
                android:popupBackground="#343231"/>
        </LinearLayout>

        <!--Recipe Comments-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Comments"
                android:padding="5dp"
                android:fontFamily="@font/karma_medium"
                android:textSize="20dp"
                android:textColor="#E9E5E5"
                android:textStyle="bold">
            </TextView>

            <EditText
                android:id="@+id/add_recipe_comments_editText"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:backgroundTint="#ED524E"
                android:fontFamily="@font/karma_medium"
                android:layout_weight="1"
                android:hint="Write comments here"
                android:maxLength="30"
                android:minHeight="48dp"
                android:padding="5dp"
                android:textColor="#E9E5E5"
                android:textColorHint="#99E9E5E5">
            </EditText>

        </LinearLayout>

        <!--Recipe Image-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Upload Image"
                android:padding="5dp"
                android:fontFamily="@font/karma_medium"
                android:textSize="20dp"
                android:textColor="#E9E5E5"
                android:textStyle="bold">
            </TextView>

            <ImageView
                android:id="@+id/add_recipe_imageView"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                app:srcCompat="@android:drawable/ic_menu_camera" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ingredients"
                    android:padding="5dp"
                    android:fontFamily="@font/karma_medium"
                    android:textSize="20dp"
                    android:textColor="#E9E5E5"
                    android:layout_weight="1"
                    android:textStyle="bold">
                </TextView>
                <Button
                    android:id="@+id/add_ingredient_button"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background = "@drawable/custom_button"
                    android:fontFamily="@font/karma_medium"
                    android:text="Add"
                    android:textAllCaps="false"
                    android:layout_weight="1"
                    android:textSize="15dp" />

            </LinearLayout>

            <ListView
                android:id="@+id/recipe_ingredient_list"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="5dp"
                android:padding="5dp"
                android:layout_weight="1"
                />

        </LinearLayout>

        <!--Ingredient Expiry Date-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp">

            <View
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/add_recipe_confirm_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background = "@drawable/custom_button"
                android:fontFamily="@font/karma_medium"
                android:onClick="onAddRecipeConfirm"
                android:text="Confirm"
                android:textAllCaps="false"
                android:textSize="20dp" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>